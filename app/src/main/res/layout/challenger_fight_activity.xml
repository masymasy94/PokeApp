<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
android:id="@+id/rl_challengers">

  <View
    android:id="@+id/centerShimChallengers"
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:visibility="invisible"
    android:layout_centerHorizontal="true"/>

  <View
    android:id="@+id/center2ShimChallengers"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:visibility="invisible"
    android:layout_centerVertical="true"/>

  <ImageButton
    android:onClick="setChallengerPokemon"
    android:scaleType="fitCenter"
    android:background="@color/white"
    android:src="@drawable/pokeball"
    android:id="@+id/image_challenger_pk"
    android:layout_height="200dp"
    android:layout_marginBottom="5dp"
    android:layout_width="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    />

  <TextView
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_width="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/challenger_pkm_types"
    android:layout_height="200dp">
  </TextView>
  <Switch
    android:layout_marginStart="5dp"
    android:textSize="20dp"
    android:layout_marginTop="210dp"
    android:text="Prima evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_1_evo_challenger"/>
  <Switch
    android:layout_marginTop="240dp"
    android:layout_marginStart="5dp"
    android:textSize="20dp"
    android:text="Seconda evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_2_evo_challenger"/>
  <TextView
    android:textSize="30sp"
    android:textColor="@color/black"
    android:gravity="top|center_horizontal"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginTop="270dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/challenger_pkm_move_pwr"
    android:layout_height="90dp">
  </TextView>

<!--  half -->

  <ImageButton
    android:onClick="setMyPokemon"
    android:scaleType="fitCenter"
    android:background="@color/white"
    android:src="@drawable/pokeball"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/image_my_pk"
    android:layout_height="200dp"
    android:layout_width="200dp"
    />
  <TextView
    android:gravity="center"
    android:layout_width="200dp"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:id="@+id/my_pkm_types"
    android:layout_height="200dp"
    android:layout_toStartOf="@+id/image_my_pk"
    android:layout_marginEnd="5dp">
  </TextView>
  <Switch
    android:textSize="20sp"
    android:layout_marginStart="5dp"
    android:text="Prima evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="240dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/switch_1_evo_my"/>
  <Switch
    android:textSize="20sp"
    android:layout_marginStart="5dp"
    android:text="Seconda evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_2_evo_my"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="210dp"/>

  <TextView
    android:gravity="bottom|center_horizontal"
    android:textSize="30sp"
    android:textColor="@color/black"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="270dp"
    android:id="@+id/my_pkm_move_pwr"
    android:layout_height="90dp">
  </TextView>
</RelativeLayout>