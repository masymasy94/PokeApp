<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
android:id="@+id/rl_randoms">

  <View
    android:id="@+id/centerShimRandoms"
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:visibility="invisible"
    android:layout_centerHorizontal="true"/>

  <View
    android:id="@+id/center2ShimRandoms"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:visibility="invisible"
    android:layout_centerVertical="true"/>

  <ImageButton
      android:id="@+id/image_random_pk"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="-2dp"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="5dp"
      android:background="@color/white"
      android:scaleType="fitCenter"
      android:src="@drawable/pokeball" />

  <TextView
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_width="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/random_pkm_types"
    android:layout_height="200dp">
  </TextView>
  <Switch
    android:layout_marginStart="5dp"
    android:textSize="20dp"
    android:layout_marginTop="210dp"
    android:text="Bonus Dadi 1 e 6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_1_bonus_random"/>
  <Switch
    android:layout_marginTop="240dp"
    android:layout_marginStart="5dp"
    android:textSize="20dp"
    android:text="Bonus Dadi 2 e 4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_2_bonus_random"/>
  <Switch
      android:layout_marginTop="270dp"
      android:layout_marginStart="5dp"
      android:textSize="20dp"
      android:text="Bonus Dadi 3 e 5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/switch_3_bonus_random"/>
  <TextView
    android:textSize="30sp"
    android:textColor="@color/black"
    android:gravity="top|center_horizontal"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginTop="300dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/random_pkm_move_pwr"
    android:layout_height="90dp">
  </TextView>

<!--  half -->

  <ImageButton
    android:onClick="setMyPokemonRdm"
    android:scaleType="fitCenter"
    android:background="@color/white"
    android:src="@drawable/pokeball"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/image_my_pk_rdm"
    android:layout_height="200dp"
    android:layout_width="200dp"
    />
  <TextView
    android:gravity="center"
    android:layout_width="200dp"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:id="@+id/my_pkm_types_rdm"
    android:layout_height="200dp"
    android:layout_toStartOf="@+id/image_my_pk_rdm"
    android:layout_marginEnd="5dp">
  </TextView>
  <Switch
    android:textSize="20sp"
    android:layout_marginStart="5dp"
    android:text="Prima evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="240dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/switch_1_evo_my_rdm"/>
  <Switch
    android:textSize="20sp"
    android:layout_marginStart="5dp"
    android:text="Seconda evoluzione"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_2_evo_my_rdm"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="210dp"/>

  <TextView
    android:gravity="bottom|center_horizontal"
    android:textSize="30sp"
    android:textColor="@color/black"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="270dp"
    android:id="@+id/my_pkm_move_pwr_rdm"
    android:layout_height="90dp">
  </TextView>
</RelativeLayout>