<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_pokemon_popup"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:elevation="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_corners"
        android:radius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pokemon_name"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/close_popup_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:foregroundGravity="center"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/light_grey"
                android:text="X" />

        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height= "match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:tint="@color/super_light_red"
                app:srcCompat="@drawable/round_corners"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/pokemon_types"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/small_round_corners"
            android:backgroundTint="@color/super_light_red"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>